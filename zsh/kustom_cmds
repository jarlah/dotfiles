function k {
    case $1 in
    skip)
        n=$(($2 + 1))
        cut -d ' ' -f $n -
        ;;
    col)
        awk -v col=$2 '{print $col}'
        ;;
    howto)
        grep $2 -r ~/.dotfiles/howtos -A 2 -h | sed -e '/```/d'
        ;;
    update)
        sudo pacman -Syy
        ;;
    upgrade)
        sudo pacman -Syu
        ;;
    refresh-mirrors)
        sudo mv /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.backup
        sudo wget https://www.archlinux.org/mirrors/\?country=US | su -c "sed -e 's/^#S/S/g' > /etc/pacman.d/mirrorlist-us"
        rankmirrors /etc/pacman.d/mirrorlist-us > /etc/pacman.d/mirrorlist
        ;;
    *)
    	echo "col <num> where num is the column of output to display"
    	echo "skip <num> where num is the number of space deliminated values to skip"
    	;;
    esac
}
